{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@theme": ["src/theme/index.scss"],
      "@assets/*": ["src/assets/*"],
      "@constants": ["src/constants.js"],
      "@directives/*": ["src/directives/*"]
    }
  },
  "typeAcquisition": {
    "exclude": ["source-map", "mdast-util-from-markdown", "mdast-util-to-markdown", "defer-to-connect"]
  }
}
