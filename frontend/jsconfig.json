{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@theme": ["src/theme/index.scss"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "typeAcquisition": {
    "exclude": ["source-map", "mdast-util-from-markdown", "mdast-util-to-markdown"]
  }
}
