{

  "files.exclude": {
    "**/dist": true
  },

  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue",
    "html",
    "vue-html"
  ],
  "stylelint.validate": [
    "css",
    "postcss",
    "sass",
    "scss",
    "vue",
    "vue-postcss"
  ]
}
